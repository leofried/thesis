        \subsection{#1}
        \subfile{sections/\foldername/#1}
    }



    \newtcbtheorem[number within=subsection]{theorem}{Theorem}{enhanced, breakable, colback=purple!5,colframe=violet!100!,fonttitle=\bfseries}{th}
