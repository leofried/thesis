    \newcommand{\sub}[1]{
        \documentclass[../../main.tex]{subfiles}
        \begin{document}
        #1
        \end{document}
    }

    \newcommand{\newsection}[1]{\def\foldername{#1}\section{#1}}
    %book/chapters? also subsections?


    \newcommand{\sect}[1]{
        \newsection{#1}
        \subfile{sections/#1/intro}
    }
    \newcommand{\subsect}[1]{
        \newpage
        \subsection{#1}
        \subfile{sections/\foldername/#1}
    }



